<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login_username_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginUsernameActivity">

    <LinearLayout
        android:id="@+id/login_username_center_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/login_username_logo_image"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/person_outline"
            app:tint="@color/black" />

        <TextView
            android:id="@+id/login_username_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mulish"
            android:text="Enter Your Username"
            android:gravity="center"
            android:textColor="@color/font_active"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingBottom="10dp" />

        <LinearLayout
            android:id="@+id/login_username_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="vertical"
            android:padding="30dp">

            <EditText
                android:id="@+id/login_username_input"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/neutral_background"
                android:fontFamily="@font/mulish"
                android:hint="Username"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:textFontWeight="500"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/login_username_save_button"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/button_not_pressed"
        android:text="Save"
        android:fontFamily="@font/mulish"
        android:textSize="16sp"
        android:paddingVertical="10dp"
        android:layout_marginBottom="20dp" />
</RelativeLayout>